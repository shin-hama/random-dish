{
  "name": "random-dish",
  "version": "1.0.0",
  "description": "Choice restaulant at radnom.",
  "main": "index.js",
  "repository": "https://github.com/shin-hama/random-dish.git",
  "author": "shin-hama <htysivista@gmail.com>",
  "license": "MIT",
  "engines": {
    "yarn": "1.x"
  },
  "scripts": {
    "start": "yarn start-frontend",
    "start-frontend": "cd frontend && yarn start",
    "install": "yarn setup-frontend && yarn setup-backend",
    "setup-frontend": "cd frontend && yarn install",
    "setup-backend": "yarn install-poetry && yarn setup-backend-app",
    "setup-poetry": "yarn install-poetry && export PATH='$HOME/.poetry/bin:$PATH'",
    "install-poetry": "curl -sSL https://raw.githubusercontent.com/python-poetry/poetry/master/get-poetry.py | python -",
    "setup-backend-app": "cd backend && poetry install"
  }
}
